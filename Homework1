import matplotlib.pyplot as plt
import numpy as np

# Гистограмма для оценок по математике
values = [2, 3, 3, 2, 5, 5, 3, 4, 5, 4]
plt.hist(values, bins=[1.5, 2.5, 3.5, 4.5, 5.5], edgecolor='black') # bins устанавливает границы интервалов
plt.xlabel('Оценки')
plt.ylabel('Количество учеников')
plt.title('Распределение оценок учеников по математике')
plt.show()

# Создание двумерного массива
array = np.random.randint(1, 11, (4, 4))
print("Двумерный массив:")
print(array)

# Круговая диаграмма для соотношения мальчиков и девочек в классе
sizes = [15, 17]
labels = ['Мальчики', 'Девочки']
plt.pie(sizes, labels=labels, autopct='%1.1f%%', startangle=140)
# autopct='%1.1f%%' добавляет процентные значения на диаграмму, а startangle=140 устанавливает начальный угол поворота диаграммы.
plt.axis('equal')  # Эта функция гарантирует, что круговая диаграмма будет отображена как круг, сохраняя соотношение сторон.
plt.title('Соотношение мальчиков и девочек в классе')
plt.show()
